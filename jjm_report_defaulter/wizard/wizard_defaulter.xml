<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="defaulter_report_wizard" model="ir.ui.view" >
            <field name="name">Reporte de Morosos</field>
            <field name="model">defaulter.report.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Reporte de Morosos">
                    <group>
                        <group>
                            <field name="partner" domain="[('is_customer', '=', True)]" options="{'no_create': True, 'no_open': True}"/>
                        </group>
                    </group>
                    <footer>
                        <button name="generate_pdf_report" string="Aceptar" type="object" class="oe_highlight"/>
                        <button string="Cancelar" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="paperformat_defaulter_report" model="report.paperformat">
            <field name="name">Reporte Morosos</field>
            <field name="default" eval="False"/>
            <field name="format">A4</field>
            <field name="page_width">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">30</field>
            <field name="margin_bottom">28</field>
            <field name="margin_right">7</field>
            <field name="margin_left">7</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">15</field>
            <field name="dpi">90</field>
        </record>

        <!-- ESTE ACTION ES EL QUE SE VE EN EL MENU -->
        <act_window id="action_defaulter_report_wizard"
            name="Reporte de Morosos"
            res_model="defaulter.report.wizard"
            view_mode="form"
            target="new"/>

        <menuitem action="action_defaulter_report_wizard"
                  id="menu_defaulter_report_wizard"
                  string="Reporte Morosos"
                  parent="sale.menu_sale_report"
                  sequence="6"/>

        <menuitem action="action_defaulter_report_wizard"
                  id="menu_payment_report_wizard_partner"
                  string="Reporte Morosos"
                  parent="jjm_report_payment.menu_reports_partner"
                  sequence="6"/>
    </data>
</odoo>