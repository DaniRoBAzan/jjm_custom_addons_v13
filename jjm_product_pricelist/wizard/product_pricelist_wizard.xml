<?xml version="1.0" encoding="utf-8"?>
<odoo>
<!--VISTA FORMULARIO DE PRECIO DE LISTA-->
    <record model="ir.ui.view" id="view_product_pricelist_form">
        <field name="name">product.pricelist.wizard.form</field>
        <field name="model">product.pricelist.wizard</field>
        <field name="arch" type="xml">
            <form string="Actualizar Precio de lista" create="false">
                <sheet string="Datos a actualizar">
                    <group>
                        <group>
                            <h1>
                                <label for='name'/>
                                <field name="name"/>
                            </h1>
                            </group>
                    </group>

                    <group>
                        <group>
                            <field name="product_tmpl_id"/>
                            <field name="related_fixed_price"/>
                            <field name="related_date_start"/>
                            <field name="related_date_end"/>
                        </group>
                        <group>
                            <field name="price_percent"/>
                            <field name="fixed_price"/>
                            <field name="date_start"/>
                            <field name="date_end"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>
                </sheet>
<!--                <div class="oe_chatter">-->
<!--                    <field name="message_follower_ids" widget="mail_followers"/>-->
<!--                    <field name="activity_ids" widget="mail_activity"/>-->
<!--                    <field name="message_ids" widget="mail_thread"/>-->
<!--                </div>-->
            </form>
        </field>

    </record>

    <record model="ir.actions.act_window" id="action_product_pricelist">
        <field name="name">Actualizar Lista Precios</field>
        <field name="res_model">product.pricelist.wizard</field>
        <field name="view_mode">form</field>
    </record>


    <menuitem id="id_action_product_pricelist"
              action="action_product_pricelist"
              sequence="3"
              parent="sale.product_menu_catalog"/>

</odoo>
