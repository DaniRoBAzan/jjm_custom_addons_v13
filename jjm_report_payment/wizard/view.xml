<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="payment_report_wizard" model="ir.ui.view" >
            <field name="name">Reporte de Cobranza</field>
            <field name="model">payment.report.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Reporte de Cobranza">
                    <group>
                        <group>
                            <field name="date_start"/>
                            <field name="collector"/>
                        </group>
                        <group>
                            <field name="date_end"/>
                            <field name="print_all"/>
                        </group>
                    </group>
                    <footer>
                        <button name="generate_pdf_report" string="Aceptar" type="object" class="oe_highlight"/>
                        <button string="Cancelar" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="paperformat_payment_report" model="report.paperformat">
            <field name="name">Reporte Cobranza</field>
            <field name="default" eval="False"/>
            <field name="format">A4</field>
            <field name="page_width">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">30</field>
            <field name="margin_bottom">28</field>
            <field name="margin_right">7</field>
            <field name="margin_left">7</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">15</field>
            <field name="dpi">90</field>
        </record>

        <!-- ESTE ACTION ES EL QUE SE VE EN EL MENU -->
        <act_window id="action_payment_report_wizard"
            name="Reporte de Cobranza"
            res_model="payment.report.wizard"
            view_mode="form"
            target="new"/>

        <menuitem action="action_payment_report_wizard"
            id="menu_payment_report_wizard"
            parent="sale.menu_sale_report"/>
    </data>
</odoo>