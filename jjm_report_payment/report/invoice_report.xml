<odoo>
    <data>
        <report
            id="action_report_flash_invoices"
            model="account.invoice"
            string="Flash Reporte Cobranza"
            report_type="qweb-pdf"
            name="flash_custom_reports.flash_invoices"
            file="flash_custom_reports.flash_invoices"
        />

        <template id="flash_payment">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-set="lang" t-value="o.user_id.sudo().lang if o.type in ('in_invoice', 'in_refund') else o.partner_id.lang"/>
                    <t t-call="flash_custom_reports.flash_report_header"/>
                    <t t-call="account.report_payment_document" t-lang="lang"/>
                    <t t-call="flash_custom_reports.flash_report_footer"/>
                </t>
            </t>
        </template>
    </data>
</odoo>