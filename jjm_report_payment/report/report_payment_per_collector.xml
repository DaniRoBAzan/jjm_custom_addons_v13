<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- EL STRING DE ESTE REPORT ES EL QUE LE DA EL NOMBRE AL ARCHIVO! EL ID ES LLAMADO EN EL RETURN -->
    <report id="payment_collector_report"
        model="report.jjm_report_payment.payment_report_template_pdf"
        string="Reporte-cobranza"
        report_type="qweb-pdf"
        name="jjm_report_payment.payment_report_collector_template_pdf"
        menu="False"/>

        <template id="payment_report_collector_template_pdf">
            <t t-call="web.html_container">
                <div class="header" style="border-bottom: 1px solid black;">
                    <h3 class="text-center">Reporte de Cobranza
                    </h3>
                    <h3 class="text-left">
                        <span style="font-size: 14px;"><strong>Desde</strong>: <t t-esc="date_start"/> <strong> Hasta</strong>: <t t-esc="date_end"/></span>
                    </h3>
                    <h3 class="text-left">
                        <span style="font-size: 14px;"><strong>Cobrador</strong>: <t t-esc="collector"/> </span>
                    </h3>
                </div>
                <div class="article mt0 o_report_layout_standard">
                    <table class="table table-condensed table-bordered">
                        <thead>
                            <th class="text-center" style="width: 50%">CLIENTE</th>
                            <th class="text-center" style="width: 10%">DNI</th>
                            <th class="text-center" style="width: 15%">CONTRATO</th>
                            <th class="text-center" style="width: 10%">CANON</th>
                            <th class="text-center" style="width: 15%">FECHA</th>
                            <th class="text-center" style="width: 10%">IMPORTE</th>
                        </thead>
                        <tbody>
                            <t t-set="subtotal" t-value="0"/>
                            <t t-set="total" t-value="0"/>
                            <t t-foreach="docs" t-as="array">
                                    <tr>
                                        <td class="text-center">
                                            <t t-esc="array['cliente']"/>
                                        </td>
                                        <td class="text-center">
                                            <t t-esc="array['dni']"/>
                                        </td>
                                        <td class="text-center">
                                            <t t-esc="array['contrato']"/>
                                        </td>
                                        <td class="text-center">
                                            <t t-esc="array['canon']"/>
                                        </td>
                                        <td class="text-center">
                                            <t t-esc="array['fecha']"/>
                                        </td>
                                        <td class="text-center">
                                            <t t-esc="array['importe']"/>
                                            <t t-set="subtotal" t-value="array['importe']"></t>
                                            <t t-set="total" t-value="total + subtotal "></t>
                                        </td>
                                    </tr>
                            </t>
                            <tr>
                                <td class="text-center" style="width: 50%"></td>
                                <td class="text-center" style="width: 10%"></td>
                                <td class="text-center" style="width: 15%"></td>
                                <td class="text-center" style="width: 10%"></td>
                                <td class="text-center" style="width: 15%">TOTAL</td>
                                <td class="text-center" style="width: 10%"><span t-esc="total or False"/></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </t>
        </template>
</odoo>