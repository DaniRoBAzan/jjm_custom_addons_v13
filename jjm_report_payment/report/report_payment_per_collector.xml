<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="jjm_report_payment_paperformat" model="report.paperformat">
            <field name="name">Electronic Voucher Paperformat</field>
<!--        VALORES PARA FORMATO PERSONALIZADO-->
        <field name="default" eval="True"/>
        <field name="format">custom</field>
        <field name="page_height">297</field>
        <field name="page_width">210</field>
        <field name="orientation">Landscape</field>
        <field name="margin_top">30</field>
        <field name="margin_bottom">23</field>
        <field name="margin_left">5</field>
        <field name="margin_right">5</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">23</field>
        <field name="dpi">90</field>
    </record>

    <!-- EL STRING DE ESTE REPORT ES EL QUE LE DA EL NOMBRE AL ARCHIVO! EL ID ES LLAMADO EN EL RETURN
    EL EL MODEL DEL REPORT VA EL _NAME DEL WIZARD.-->
    <report id="payment_collector_report"
        model="payment.report.wizard"
        string="Reporte-cobranza"
        report_type="qweb-pdf"
        name="jjm_report_payment.report_payment_collector_pdf"
        paperformat="jjm_report_payment_paperformat"
        menu="False"/>



    <template id="report_payment_collector_pdf">
        <t t-call="web.html_container">
            <div t-call="web.external_layout">
                <div class="page">
                    <div>
                        <h3 class="text-center"><strong><u>Reporte Cobranza</u></strong></h3>
                        <br/>
                        <div class="row col-12">
                        <div class="row col-6">
                            <div class="text-left">
                                <span style="font-size: 12px;"><strong>Desde</strong>:
                                    <t t-esc="encabezado['date_start']"/>
                                </span>
                                <br/>
                                <span style="font-size: 12px;"><strong>Hasta</strong>:
                                    <t t-esc="encabezado['date_end']"/>
                                </span>
                            </div>
                        </div>
                        <div class="row col-6">
                            <span style="font-size: 12px;"><strong>Fecha de impresi√≥n</strong>:
                                <t t-esc="encabezado['today']"/>
                                </span>
                                <br/>
                                <span style="font-size: 12px;"><strong>Usuario</strong>:
                                    <t t-esc="encabezado['user']"/>
                                </span>
                        </div>
                    </div>
            </div>
            <t t-set="total_gral" t-value="0"/>
            <div>
                <t t-set="group_collector" t-value="[]"/>
                <t t-foreach="docs" t-as="array">
                    <t t-set="group_collector" t-value="group_collector+[array['collector']]"/>
                </t>
                <t t-foreach="set(group_collector)" t-as="collector">
                    <t t-set="subtotal" t-value="0"/>
                    <t t-set="total" t-value="0"/>
                    <div class="text-left">
                        <br/>
                        <span style="font-size: 12px;"><strong>Cobrador</strong>:
                            <t t-esc="collector.name"/>
                        </span>
                        <br/>
                    </div>
                    <table class="table table-condensed table-bordered">
                        <thead style="font-size: 11px;">
                            <th class="text-center">CLIENTE</th>
                            <th class="text-center">DIRECCION</th>
                            <th class="text-center">TELEFONO</th>
                            <th class="text-center">CONTRATO</th>
                            <th class="text-center">CANON</th>
                            <th class="text-center">FECHA</th>
                            <th class="text-center">IMPORTE</th>
                        </thead>

                        <tbody>
                            <t t-foreach="docs" t-as="array">
                                <t t-if="array['canon'] != ' '">
                                    <t t-if="collector.id==array['collector'].id">
                                        <tr style="font-size: 11px;">
                                            <td class="text-center">
                                                <t t-esc="array['cliente']"/>
                                            </td>
                                            <td class="text-center">
                                                <t t-raw="array['direccion']"/>
                                            </td>
                                            <td class="text-center">
                                                <t t-esc="array['telefono']"/>
                                            </td>
                                            <td class="text-center">
                                                <t t-esc="array['contrato']"/>
                                            </td>
                                            <td class="text-center">
                                                <t t-esc="array['canon']"/>
                                            </td>
                                            <td class="text-center">
                                                <t t-esc="array['fecha']"/>
                                            </td>
                                            <td class="text-center">
                                                <t t-esc="array['importe']" t-options='{"widget": "monetary", "display_currency": currency_id}'/>
                                                <t t-set="subtotal" t-value="array['importe']"></t>
                                                <t t-set="total" t-value="total + subtotal "></t>
                                                <t t-set="total_gral" t-value="total_gral + subtotal "></t>
                                            </td>
                                        </tr>
                                    </t>
                                </t>
                            </t>
                            <tr style="font-size: 11px;">
                                <td class="text-center"></td>
                                <td class="text-center"></td>
                                <td class="text-center"></td>
                                <td class="text-center"></td>
                                <td class="text-center"></td>
                                <td class="text-center" style="font-size: 11px;"><stong>TOTAL</stong></td>
                                <td class="text-center"><span style="font-size: 11px;" t-esc="total or False" t-options='{"widget": "monetary", "display_currency": currency_id}'/></td>
                            </tr>
                        </tbody>
                    </table>
                </t>
                <table class="table table-condensed table-bordered">
                    <tbody>
                        <tr>
                            <td class="text-center" style="width: 40%"></td>
                            <td class="text-center" style="width: 20%"></td>
                            <td class="text-center" style="width: 15%"></td>
                            <td class="text-center" style="width: 10%"></td>
                            <td class="text-center" style="width: 20%"><strong style="font-size: 11px;">TOTAL GENERAL</strong></td>
                            <td class="text-center" style="width: 10%; font-size: 11px;"><span t-esc="total_gral or False" t-options='{"widget": "monetary", "display_currency": currency_id}'/></td>
                        </tr>
                    </tbody>
                </table>
            </div>
                </div>
            </div>
        </t>
    </template>
</odoo>
