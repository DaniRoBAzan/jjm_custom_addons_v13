<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="unsubscribe_report_wizard" model="ir.ui.view" >
            <field name="name">Reporte de Baja</field>
            <field name="model">unsubscribe.report.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Reporte de Baja">
                    <group>
                        <group>
                            <field name="date_start"/>
                            <field name="supervisor" domain="[('is_supervisor', '=', True)]" options="{'no_create': True, 'no_open': True}"/>
                            <field name="campaign" options="{'no_create': True, 'no_open': True}" />
                        </group>
                        <group>
                            <field name="date_end"/>
                            <field name="consultant" domain="[('is_consultant', '=', True),('jjm_manager','=',supervisor)]" options="{'no_create': True, 'no_open': True}"/>
                        </group>
                    </group>
                    <footer>
                        <button name="generate_pdf_report" string="Aceptar" type="object" class="oe_highlight"/>
                        <button string="Cancelar" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="paperformat_unsubscribe_report" model="report.paperformat">
            <field name="name">Reporte Baja</field>
            <field name="default" eval="False"/>
            <field name="format">A4</field>
            <field name="page_width">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">30</field>
            <field name="margin_bottom">28</field>
            <field name="margin_right">7</field>
            <field name="margin_left">7</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">15</field>
            <field name="dpi">90</field>
        </record>

        <!-- ESTE ACTION ES EL QUE SE VE EN EL MENU -->
        <act_window id="action_unsubscribe_report_wizard"
            name="Reporte de Baja"
            res_model="unsubscribe.report.wizard"
            view_mode="form"
            target="new"/>

        <menuitem action="action_unsubscribe_report_wizard"
                  id="menu_unsubscribe_report_wizard"
                  string="Reporte Baja"
                  parent="sale.menu_sale_report"
                  sequence="1"/>

       <menuitem action="action_unsubscribe_report_wizard"
            id="menu_payment_report_wizard_partner"
            string="Reporte Baja"
            parent="jjm_report_payment.menu_reports_partner"
            sequence="1"/>
    </data>
</odoo>