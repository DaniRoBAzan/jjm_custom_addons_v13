<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="jjm_emission_report_wizard" model="ir.ui.view" >
            <field name="name">jjmemission.report.wizard</field>
            <field name="model">jjmemission.report.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Reporte de Emision">
                    <group>
                        <group>
                            <field name="month" string="Mes"/>
                            <field name="collector" options="{'no_create': True, 'no_open': True}" string="Cobrador"/>
                        </group>
<!--                        <group>-->
<!--                            <field name="date_end"/>-->
<!--                        </group>-->
                    </group>
                    <footer>
                        <button name="generate_pdf_report" string="Aceptar" type="object" class="oe_highlight"/>
                        <button string="Cancelar" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="paperformat_emission_report" model="report.paperformat">
            <field name="name">Reporte de Emision</field>
            <field name="default" eval="False"/>
            <field name="format">A4</field>
            <field name="page_width">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">30</field>
            <field name="margin_bottom">28</field>
            <field name="margin_right">7</field>
            <field name="margin_left">7</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">15</field>
            <field name="dpi">90</field>
        </record>

